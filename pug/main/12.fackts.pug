mixin fact(cl,small,h3,p)
	.col-md-4.col-sm-4
		.fact(class=cl)
			h3.fact-title
				small='Факт '+small
				=h3
			p.general-text.general-text-fact=p

section#facts
	.container
		h3.general-title.general-title-fackts TOP-3 фактов о нас:
		.row
			+fact('fact-1','1','3 года','За 3 года совместной работы провели крупнейшие открытые мероприятия по механике человека и генным ключам с посещаемостью более 700 человек')
			+fact('fact-2','2','1000 чел.','Обучили более 1000 специалистов за 2019 год, которые сегодня активно консультируют и проводят офлайн- и онлайн-тренинги')
			+fact('fact-3','3','15 стран','За 2 года посетили 15 стран: Вьетнам, Камбоджа, Лаос, Таиланд, Малайзия, Индонезия, Италия, Мальта, Андорра, Испания, Кипр, Турция, и пр.')