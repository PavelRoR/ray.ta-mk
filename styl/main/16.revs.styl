#revs
	padding 100px 0
	background-color: #030619;
.general-title-revs
	width 100%
	max-width 430px
#text-revs
	.carousel-inner
		width 100%
		max-width 760px
		margin 0 auto
		background-color #fff
		border-radius: 5px
		box-shadow: 20px 20px 60px rgba(114, 238, 255, .2)
	.rev-img
		height 450px
		width 100%
		object-fit: contain
		object-position: center
.carousel-control
	top calc(50% - 24px)
	background-color: transparent
	color #353847
	font-size: 48px
	opacity 1
	font-family: GPm
	transition: all .4s ease
	&.left
	&.right
		background-image: none
	&:focus
		text-decoration: none
		color #353847
	&:hover
		text-decoration: none
		color myG