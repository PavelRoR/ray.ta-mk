#authors
	padding 100px 0
	background-color: #030619;
.general-title-authors
	@extend .general-title-about
.author
	&-1
		margin-bottom: 50px
	&-single
		position relative
	&-img
		display block
		box-shadow: 20px 20px 60px rgba(114, 238, 255, 0.2);
		border-radius: 5px;
		margin 0 auto 20px
	&-title
		font-size: 36px;
		color: myG
		font-family: GPm
		text-shadow: 0px 4px 20px rgba(114, 238, 255, 0.3);
		position: absolute
		bottom 50px
		left 28px
		width 100%
		max-width 280px
	&-certs-title
		font-family: GPm
		margin-bottom: 10px
		font-size: 18px;
		color: #D9F6FF;
		text-shadow: 0px 4px 20px rgba(0, 0, 0, 0.25);
	&-list
		li
			list-style: none
			position relative
			padding-left: 22px
			margin-top: 20px
			&:before
				content: ''
				display block
				position: absolute
				top 8px
				left 0
				border-radius: 50px
				background-color: myG
				width 8px
				height 8px
	&-history
		height 530px
		overflow-x hidden
		overflow-y: scroll
.cert-link
	display block
	overflow hidden
	margin 0 auto 10px
	border-radius: 5px;
	position relative
	box-shadow: 20px 20px 60px rgba(114, 238, 255, 0.2);
	width: 110px
	height 68px
	&:after
		content: ''
		display block
		position: absolute
		width 110px
		height 68px
		background-color: rgba(0, 255, 224, 0.8)
		background-image url(../img/icons/lupe.png)
		background-repeat no-repeat
		background-position: center
		top 0
		left 0
		right 0
		bottom: 0
		transition: all .4s ease
		opacity 0
.cert-link:hover:after
		opacity 1
.cert-img
	object-fit: cover
	object-position: center
	width 100%
	height 100%	