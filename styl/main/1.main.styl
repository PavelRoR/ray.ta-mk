#main
	background-image url(../img/backgrounds/main-bg.png)
	background-repeat no-repeat
	background-position center
	background-size: cover
	padding-bottom: 50px
.main-title
	font-family: GPm
	font-size: 28px;
	line-height: 38px;
	text-shadow: 0px 4px 20px rgba(114, 238, 255, 0.3);
	span
		color myG
.main-subtitle
	font-size: 20px
	margin 50px 0 50px 50px
.main-list
	margin-left: 50px
	li
		margin-bottom: 25px
		padding-left: 60px
		background-image url(../img/icons/check.png)
		background-repeat no-repeat
		background-position: left top 5px
		list-style none
		&:last-child
			margin-bottom: 0
.main-img
	display block
	margin 0 auto
	width 100%
	height auto
.button-main
	position relative
	top -60px
	z-index 9
.video-wrapper-main
	max-width 650px
	border-radius: 5px
	box-shadow: 20px 20px 60px rgba(114, 238, 255, .2)
	iframe
		padding 10px
		background-clip: content-box;
		border: 1px solid myG
.staticstics
	position relative
	text-align: center
	margin-top: 50px
	// top: -100px
.stat-main-title
	position: absolute
	font-family: GPBk
	font-size: 120px;
	line-height: 100px;
	letter-spacing: 0.02em;
	color: rgba(9, 60, 67, 0.5);
	transform: rotate(-90deg);
	right: -300px;
	top: 280px;
.stat
	position relative
	float left
	&-1
		width 174px
		margin 0 20px 0 150px
	&-2
		width 258px
		margin 80px 20px 0 0
	&-3
		width 342px
		margin 160px 0 0
	&-img
		display block
		width 100%
		height auto
		margin 0 auto
	&-title
		font-family: GPBl
		position: absolute
		margin 0 auto
		left 0
		right 0
		text-shadow: 0px 0px 20px rgba(0, 0, 0, 0.8);
		&-1
			font-size: 48px
			top 45px
		&-2
			font-size: 72px;
			top: 72px
		&-3
			font-size: 96px;
			top 90px
	&-subtitle
		font-size: 24px;
		font-family: GPm
		line-height: 24px;
		text-shadow: 0px 4px 20px rgba(0, 0, 0, 0.25);
		margin: 0 auto 10px
		width 175px
		color myG
	&-text
		width 175px
		margin 0 auto
		color: #D9F6FF;
		text-shadow: 0px 4px 20px rgba(0, 0, 0, 0.25);