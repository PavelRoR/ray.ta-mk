#main
	padding 0 0 60px
	background-image url(../img/backgrounds/main-bg.png)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	text-align: center
.pre
	font-size: 20px
.main-title
	font-size: 32px
	font-family: GPBl
	color: myG
	text-shadow: 0px 4px 20px rgba(114, 238, 255, 0.3);
	margin 10px 0 30px
.main-info
	font-size: 22px
	color #fff
	padding 0 10px
	display: inline-block
	span
		display: inline-block
		font-family: GPm
.video-wrapper-main
	margin 20px auto 0
	max-width 560px
	box-shadow: 20px 20px 60px rgba(114, 238, 255, .2)
#main.remind
	min-height calc(100vh - 145px)
.remind-main-title
	margin 90px 0 20px
	font-size: 30px
	line-height: 1.4
	color #fff
	a
		display: inline-block
		color: myG
		text-decoration: underline
		&:focus
			text-decoration: none
		&:hover
			text-decoration: none
.remind-main-subtitle
	font-size: 26px